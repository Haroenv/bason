{
  "private": true,
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production",
    "cleanup": "rimraf *.zip build",
    "package": "VERSION=$(utc-version); zip -r bason-$VERSION.zip build",
    "release": "run-s cleanup build version package",
    "start": "rollup -c -w",
    "test": "semistandard -v | snazzy & run-s build && ava",
    "version": "VERSION=$(utc-version); echo $VERSION; dot-json build/manifest.json version $VERSION"
  },
  "dependencies": {
    "linkify-urls": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "ava": "^1.1.0",
    "cssnano": "^4.1.8",
    "dot-json": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.11.0",
    "rimraf": "^2.6.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-cpy": "^1.1.0",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.0",
    "rollup-plugin-terser": "^4.0.2",
    "rollup": "^1.1.2",
    "semistandard": "^13.0.1",
    "snazzy": "^8.0.0",
    "utc-version": "^1.1.0"
  }
}
