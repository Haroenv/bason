{
  "name": "Yayson",
  "version": "0.1.0",
  "description": "A simple JSON formatter for Google Chrome.",
  "homepage_url": "https://github.com/vinkla/yayson#readme",
  "manifest_version": 2,
  "minimum_chrome_version": "69",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "icons": {
		"128": "icon.png"
	},
  "content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			]
		}
	]
}
